<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?android:attr/actionBarSize"
    tools:context="com.example.seung.octotproject.DataVisualizingActivity"
    tools:showIn="@layout/app_bar_visual"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:layout_above="@+id/display"
    android:layout_alignParentTop="true"
    android:fillViewport="true"
    android:background="#F1F1F1">
    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_above="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:gravity="center"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/machine"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="기계"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/factory"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:backgroundTint="@color/mainColor"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="30dp">
                </Spinner>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="30dp">
                    <Spinner
                        android:id="@+id/group"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:backgroundTint="@color/mainColor"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginRight="3dp">
                    </Spinner>
                    <Spinner
                        android:id="@+id/machine"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:backgroundTint="@color/mainColor"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="3dp">
                    </Spinner>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/graph"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="그래프"
                        android:textSize="18dp"
                        android:paddingLeft="10dp"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/chartList"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@color/mainColor"
                    android:entries="@array/chartList" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/sensor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#ffffff"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sensor"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="센서"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/arrow"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingLeft="10dp"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/selected_sensors_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#F15F5F"
                android:visibility="gone"
                android:paddingLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:focusableInTouchMode="true"
                android:padding="8dp"
                android:gravity="center"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/range"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="구간"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"/>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:gravity="center">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최소값:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_weight="0.3"/>
                <EditText
                    android:id="@+id/from"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:background="#D5D5D5"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최대값:"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_weight="0.3"/>
                <EditText
                    android:id="@+id/to"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="300"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:background="#D5D5D5"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"/>
                </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="8dp"
                android:clipToPadding="false"
                android:gravity="center"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/date"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="날짜"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"/>
                </LinearLayout>


            <LinearLayout
                android:id="@+id/date_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="5dp"
                        android:text="시작일:  "
                        android:textSize="15dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/startdate"
                            android:background="#D5D5D5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:onClick="onClick"/>
                        <TextView
                            android:id="@+id/starttime"
                            android:layout_width="0dp"
                            android:background="#D5D5D5"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:onClick="onClick"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#000000"
                    android:layout_marginLeft="70dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="70dp"
                android:textSize="15dp"
                android:text="종료일:  "/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="70dp">
                    <TextView
                        android:id="@+id/enddate"
                        android:layout_width="0dp"
                        android:background="#D5D5D5"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:onClick="onClick"/>
                    <TextView
                        android:id="@+id/endtime"
                        android:background="#D5D5D5"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <Button
        android:id="@+id/display"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/mainColor"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="15dp"
        android:text="display chart"/>

</RelativeLayout>