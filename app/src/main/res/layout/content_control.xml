                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/fontColor"
                        android:textSize="22dp" />
                    <ImageButton
                        android:id="@+id/ib7"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/charticon"
                        android:text="chart"
                        android:textSize="12dp"
                        android:backgroundTint="#D5D5D5"
                        android:onClick="onShowChartBtnClick"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/toggles_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="#F6F6F6"
        android:elevation="5dp">
        <ToggleButton
            android:id="@+id/first_toggle"
            android:layout_margin="7dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:drawableTop="@drawable/off"
            android:background="@drawable/offstroke"
            android:textColor="@color/fontColor"
            android:textSize="15dp"
            android:textOn="On"
            android:textOff="Off"
            android:onClick="onToggleClick"/>
        <ToggleButton
            android:id="@+id/second_toggle"
            android:layout_margin="7dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:drawableTop="@drawable/fan_off"
            android:textColor="@color/fontColor"
            android:background="@drawable/offstroke"
            android:textSize="15dp"
            android:textOn="On"
            android:textOff="Off"
            android:onClick="onToggleClick"/>
        <ToggleButton
            android:id="@+id/third_toggle"
            android:layout_margin="7dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:drawableTop="@drawable/light_off"
            android:textColor="@color/fontColor"
            android:background="@drawable/offstroke"
            android:textSize="15dp"
            android:textOn="On"
            android:textOff="Off"
            android:onClick="onToggleClick"/>
        <ToggleButton
            android:id="@+id/fourth_toggle"
            android:layout_margin="7dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            android:drawableTop="@drawable/alarm_off"
            android:textColor="@color/fontColor"
            android:background="@drawable/offstroke"
            android:textSize="15dp"
            android:textOn="On"
            android:textOff="Off"
            android:onClick="onToggleClick"/>
    </LinearLayout>
</RelativeLayout>






